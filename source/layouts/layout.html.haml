/ include this later: :manifest=>"/offline.manifest"
%html{:manifest=>"/offline.manifest"}
	%head
		%meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'utf-8'}
		%meta{:content=>'yes', :name=>'apple-mobile-web-app-capable'}
		%meta{:content=>'user-scalable = no', :name=>'viewport'}
		%title= data.page.title || 'Euphorbia'
		%link{:rel=>'stylesheet', :href=>'stylesheets/master.css', :type=>'text/css', :media=>'screen', :charset=>'utf-8' }
		%script{:type=>'text/javascript', :src=>'javascripts/jquery-1.8.2.min.js', :charset=>'utf-8'}
		%script{:type=>'text/javascript', :src=>'javascripts/knockout-2.2.0.js', :charset=>'utf-8'}
		%script{:type=>'text/javascript', :src=>'javascripts/fastclick.js', :charset=>'utf-8'}
		%script{:type=>'text/javascript', :src=>'javascripts/library.js', :charset=>'utf-8'}
		%script{:type=>'text/javascript', :src=>'javascripts/animations-fisherman.js', :charset=>'utf-8'}
		%script{:type=>'text/javascript', :src=>'javascripts/animations-farmer.js', :charset=>'utf-8'}
		%script{:type=>'text/javascript', :src=>'javascripts/app.js', :charset=>'utf-8'}
	
	%body{:class=>"#{data.page.bodyClass}"}
		= yield